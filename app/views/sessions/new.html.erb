  <div class="container-fluid newCourseForm">
    <h3 class="welcomeBack" style="text-align: center;">Welcome Back!</h3>
    <%= form_for :user, url: login_path do |f| %>
    
      <div class="mb-3">
        <label for="exampleFormControlInput1" class="form-label"><%= t('usuario-login') %></label>
        <%=f.text_field :username, class: "form-control Input", :placeholder => t('ingresar-usuario-login') %>
      </div>
      
      <div class="mb-3">
        <label for="exampleFormControlInput1" class="form-label"><%= t('contrasena-login') %></label>
        <%=f.password_field :password, class: "form-control Input", :placeholder => t('ingresar-contrasena-login') %>
      </div>
    
      <%=f.submit "Log In", class: "btn btn-primary" %> 
    <%end%>

  <h5 class="text-center"><%= t('no-tiene-cuenta-link').html_safe %></h5>

  </div>

