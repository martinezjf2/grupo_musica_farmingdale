
    <div class="container-fluid newCourseForm">
      <h3 class="welcomeBack" style="text-align: center;"><%= t('editar-video-heading') %></h3>

      <%= form_for @video, url: video_path do |f| %>
      <%= hidden_field_tag :page, params[:page] || 1  %>
        <div class="mb-3">
          <%= f.label :name, 'Nombre del Video', class: "form-label" %>
          <%=f.text_field :name, class: "form-control Input", :placeholder => 'Ingrese Nombre del Video', value: f.object.name %>
        </div>

        <div class="mb-3">
            <%= f.label :link_to_video, 'URL del Video', class: "form-label" %>
            <%=f.text_field :link_to_video, class: "form-control Input", :placeholder => 'Ingrese URL del Video', value: f.object.link_to_video%>
          </div>

        <div class="mb-3">
            <%= f.label :date_created, 'Fecha del Video', class: "form-label" %>
            <%=f.date_field :date_created, class: "form-control Input", :placeholder => 'Ingrese Fecha del Video', value: f.object.date_created  %>
        </div>

        <div class="mb-3">
          <%= f.label :category, 'Categoría del Video', class: "form-label" %>
          <%= f.select :category, ['Predicas', 'Juvenil', 'Musica', 'Dramas', 'Testimonios', 'Inspiracion', 'Retiro/Vigilia', 'Podcast'], { prompt: 'Seleccione una categoría' }, class: "form-control Input" %>
        </div>
      
        <%=f.submit t('edit-video-button'), class: "btn btn-lg btn-default loginButton" %> 
      <%end%>

    </div>
  