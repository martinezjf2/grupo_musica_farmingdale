<section id="events" style="padding-bottom:50px;">
<div class="events-heading">
    <h2 id="videos-heading" class="text-white"><%=@event.event_name%></h2>
</div>
<div class="card text-center" id="ind-card-for-event">
    <%= image_tag @event.image, class: "card-img-top", width: "100", alt: "" %>
    <div class="card-body">


        <h3><%= @event.event_name%></h3>
        <h4><%= @event.event_date.strftime("%A, %B %d, %Y")%></h4>
        <h6 class="card-text"><%= @event.event_start_time.strftime("%I:%M %p")%> - <%= @event.event_end_time.strftime("%I:%M %p") %></h6>
        <h6 class="card-text">(<%= @event.location%>) <%= @event.address%>, <%= @event.city%> <%= @event.zip%>, Phone: <%= @event.phone_number%></h6>
        <p class="card-text"><%= @event.description%></p>
        <%= link_to "Formulario para Retiros", "https://seguidoresdejesus.s3.amazonaws.com/formulario.pdf", target: "_blank", style: 'text-decoration: none;' %> <br><br>



        <% if current_user %>
            <%= link_to "Edit Event", edit_event_path(@event)%>
            <%= link_to 'Delete Event', event_path(@event), method: :delete, data: { confirm: 'Are you sure?' } %>
        <% end %>

    </div>
  </div>
  </section>

  <%= render "/partials/carousel"%>
