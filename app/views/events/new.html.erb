    <div class="container-fluid newCourseForm">
      <h3 class="welcomeBack" style="text-align: center;"><%= t('agregar-evento-nuevo-heading') %></h3>
      <%= form_for :event, url: new_event_path do |f| %>
      
        
        <div class="mb-3">
          <%= f.label :event_name, 'Nombre del Evento', class: "form-label" %>
          <%=f.text_field :event_name, class: "form-control Input", :placeholder => t('ingrese-nombre-event') %>
        </div>

        <div class="mb-3">
            <%= f.label :event_date, 'Fecha del Evento', class: "form-label" %>
            <%=f.date_field :event_date, class: "form-control Input", :placeholder => t('ingrese-fecha-event') %>
          </div>

          <div class="mb-3">
            <%= f.label :event_start_time, 'Hora Que Comienza Evento', class: "form-label" %>
            <%=f.time_field :event_start_time, class: "form-control Input" %>
          </div>

          <div class="mb-3">
            <%= f.label :event_end_time, 'Hora Que Termina Evento', class: "form-label" %>
            <%=f.time_field :event_end_time, class: "form-control Input"%>
          </div>

          <div class="mb-3">
            <%= f.label :location, 'Lugar (Gymnasio, Iglesia de ...)', class: "form-label" %>
            <%=f.text_field :location, class: "form-control Input", :placeholder => t('ingrese-local-event') %>
          </div>

          
          <div class="mb-3">
            <%= f.label :address, 'Direccion', class: "form-label" %>
            <%=f.text_field :address, class: "form-control Input", :placeholder => t('ingrese-direccion-event') %>
          </div>

          <div class="mb-3">
            <%= f.label :city, 'Cuidad', class: "form-label" %>
            <%=f.text_field :city, class: "form-control Input", :placeholder => t('ingrese-cuidad-event') %>
          </div>

          <div class="mb-3">
            <%= f.label :phone_number, 'Numero de Telefono', class: "form-label" %>
            <%=f.text_field :phone_number, class: "form-control Input", :placeholder => t('ingrese-phone-event') %>
          </div>

          <div class="mb-3">
            <%= f.label :zip, 'Codigo Postal', class: "form-label" %>
            <%=f.text_field :zip, class: "form-control Input", :placeholder => t('ingrese-zip-event') %>
          </div>

          <div class="mb-3">
            <%= f.label :image, 'Imagen por URL', class: "form-label" %>
            <%=f.text_field :image, class: "form-control Input", :placeholder => t('ingrese-url-event') %>
          </div>

          <div class="mb-3">
            <%= f.label :description, 'DescripciÃ³n', class: "form-label" %>
            <%=f.text_area :description, class: "form-control Input", :placeholder => t('ingrese-descrip-event') %>
          </div>

      
        <%=f.submit "AGREGAR", class: "btn btn-lg btn-default loginButton" %> 
      <%end%>
    </div>
