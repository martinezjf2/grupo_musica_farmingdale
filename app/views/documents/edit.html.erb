<section id="events" style="padding-bottom: 50px" class="text-center">
  <div class="events-heading">
    <h2 id="videos-heading" class="text-white">Edit Document</h2>
  </div>

<%= form_with(model: @document, url: virtu_path(@document), local: true, method: :patch) do |form| %>
  <div class="field">
    <%= form.label :file, class: "text-white"%>
    <%= form.file_field :file, class: 'btn btn-primary m-2'%>
  </div>

  <div class="actions">
    <%= form.submit "Update Document", class: 'btn btn-primary m-2' %>
  </div>
<% end %>

</section>