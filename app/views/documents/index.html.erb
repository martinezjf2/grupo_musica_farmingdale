<section id="about-author" class="bg-light py-5">
  <h2 class="text-center h2Virtus">
    <%= t('h2Virtus-title') %>
  </h2>

  <div class="container text-center">
    <div class="row">
      <div class="col-md-4 virtusLogoDiv">
        <%= image_tag 'virtus/virtusLogo.png', class: "virtusLogo", alt:"virtusLogo"%>
      </div>
      <div class="col-md-8 p-4 virtusContext">
        <h2><%= t('h2Virtus-subtitle') %></h2>
        <p>
          <%= t('virtus-content-p1') %>
        </p>
        <p>
          <%= t('virtus-content-p2') %>
        </p>
        <p>
          <%= t('virtus-content-p3').html_safe %>
        </p>
        <p>
          <%= t('virtus-content-p4') %>
        </p>
        <p style="font-weight: 600; font-style: italic">
          <%= t('virtus-content-p5').html_safe %>
        </p>

        <%= t('instructions-context').html_safe %>
        <br><br>
        <% if @spanish_document %>
        <div class="virtus" id="">
          <% if current_user %> 
          <%= link_to "Eliminar Bulletin Del Mes", virtu_path(@spanish_document), method: :delete, data: { confirm: 'Are you sure you want to delete spanish bulletin?' }, class: 'btn btn-danger m-2' %>
          <% end %> 
          <%= link_to "Click Aqui Para Ver Bulletin del Mes (Spanish)", rails_blob_path(@spanish_document.file), target: '_blank', class: 'btn btn-primary m-2' %>
        </div>
        <% else %>
        <div class="videos-heading text-center">
          <h2 id="videos-heading" class="">
            Bulletin (Espanol) no esta disponible....
          </h2>
          <% if current_user %> 
          <%= link_to t('nuevo-bulletin'), new_virtu_path, class: 'btn btn-primary m-2' %> <% end %>
        </div>
        <% end %>

        <% if @english_document %>
        <div class="virtus" id="">
          <% if current_user %> 
          <%= link_to "Delete Monthly Bulletin", virtu_path(@english_document), method: :delete, data: { confirm: 'Are you sure you want to delete english bulletin?' }, class: 'btn btn-danger m-2' %> 
          <% end %> 
          <%= link_to "Click Here To See Monthly Bulletin (English)", rails_blob_path(@english_document.file), target: '_blank', class: 'btn btn-primary m-2' %>
        </div>
        <% else %>
        <div class="videos-heading text-center">
          <h2 id="videos-heading" class="">
           Bulletin (English) not available...
          </h2>
          <% if current_user %> 
          <%= link_to t('nuevo-bulletin'), new_virtu_path, class: 'btn btn-primary m-2' %> <% end %>
        </div>
        <% end %>





      </div>
    </div>
  </div>
</section>
