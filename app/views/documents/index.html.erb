<!-- app/views/documents/show.html.erb -->
<% if @document %>
<h1>Document Details</h1>

<p><strong>File Name:</strong> <%= @document.file.filename.to_s %></p>
<p><strong>Uploaded At:</strong> <%= @document.created_at.to_s(:long) %></p>

<p><strong>File:</strong></p>
<p>
    <%= link_to 'Edit', edit_document_path(@document) %> | 
    <%= link_to 'Delete', @document, method: :delete, data: { confirm: 'Are you sure?' } %>
  </p>
  
<%= link_to @document.file.filename.to_s, rails_blob_path(@document.file) %>
<div style="width: 70%; margin: 0 auto; height: auto">
  <iframe
    src="<%= rails_blob_path(@document.file) %>"
    width="100%"
    height="600px"
  ></iframe>
</div>

<p>
  <%= link_to 'Edit', edit_document_path(@document) %> | 
  <%= link_to 'Delete', @document, method: :delete, data: { confirm: 'Are you sure?' } %>
</p>

<% else %>
<h1>Document Not Available at the Moment</h1>
<%= link_to 'New Virtus Bulletin', new_document_path %> | 

<% end %>

<section id="events" style="padding-bottom: 50px">
  <div style="width: 50%; margin: 0px auto; padding: 20px; text-align: center">
    <h2 id="videos-heading" class="text-white">Bulletin Mensual de Virtus</h2>
  </div>

  <!-- <a href="../../assets/pdfs/virtus.pdf" target="_blank">Bulletin del Mes</a> -->

  <!-- <%= link_to 'Monthly Bulletin', asset_path('/pdfs/virtus.pdf'), target: '_blank' %> -->
  <div style="width: 70%; margin: 0 auto; height: auto">
    <iframe src="/pdfs/virtus.pdf" width="100%" height="600px"></iframe>
  </div>
</section>
