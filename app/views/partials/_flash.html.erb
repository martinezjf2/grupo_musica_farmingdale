<% if flash.any? %>
    <% flash.each do |type, msg| %>
        <div class="text-center">
                <div class="alert alert-<%= type %> alert-dismissible fade show" role="alert">
                    <strong><%= msg %></strong>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close">
                    </button> 
                </div>
            </div>
    <% end %>
<% end %>

